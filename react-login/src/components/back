import React, { Component } from "react";
import {Launcher} from 'react-chat-window'
import {
  Card, CardImg, CardText, CardBody,
  CardTitle, CardSubtitle, Button, Row, Col, Container
} from 'reactstrap';
import '../../node_modules/bootstrap/dist/css/bootstrap.min.css';
import './solo.css';

export default class Solo extends Component {

  constructor() {
    super();
    this.state = {
      messageList: []
    };
  }
 
  _onMessageWasSent(message) {
    this.setState({
      messageList: [...this.state.messageList, message]
    })
  }
 
  _sendMessage(text) {
    if (text.length > 0) {
      this.setState({
        messageList: [...this.state.messageList, {
          author: 'me',
          type: 'text',
          data: { text }
        }]
      })
    }
  }
 
  render() {
    return (<div class ="bcksolo">
      <Launcher
        agentProfile={{
          teamName: 'LoveLetter chat',
          imageUrl: 'https://d1nhio0ox7pgb.cloudfront.net/_img/g_collection_png/standard/32x32/playing_card_hearts.png'
        }}
        onMessageWasSent={this._onMessageWasSent.bind(this)}
        messageList={this.state.messageList}
        showEmoji
      />

	<div class="card1" >

       <Row >
      <Col md={6}>
        <Card >
          <CardImg top width="100%" src="https://upload.wikimedia.org/wikipedia/en/e/e1/Love_Letter_box_cover.jpg" alt="Card image cap" />
        </Card>
      </Col>
    </Row>

    </div>

</div>
    );
  }
}